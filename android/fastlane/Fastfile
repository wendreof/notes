default_platform(:android)

platform :android do
  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :beta do
    # sh("flutter clean")
    # sh("flutter pub get")
    sh("flutter build appbundle --release")

    upload_to_play_store(
      aab: "../build/app/outputs/bundle/release/app-release.aab",
      track: "beta",
      skip_upload_images: true,
      skip_upload_screenshots: true,
      skip_upload_apk: true,
    )
  end
  

  desc "Deploy nova vers√£o para Google Play Store"
  lane :deploy do

    sh("set -e")

    # Find and increment the version number.
    sh("perl -i -pe 's/^(version:\s+\d+\.\d+\.\d+\+)(\d+)$/$1.($2+1)/e' ../../pubspec.yaml")
      
    # Commit and tag this change.
    sh("version=`grep 'version: ' ../../pubspec.yaml | sed 's/version: //'`")
    sh("git commit -m  'docs: Bump version to $version' ../../pubspec.yaml")
    sh("git tag $version")
    
    sh("flutter clean")
    sh("flutter pub get")
    sh("flutter build appbundle --release")
    upload_to_play_store(
      aab: "../build/app/outputs/bundle/release/app-release.aab",
      track: "production",
      skip_upload_images: true,
      skip_upload_screenshots: true,
      skip_upload_apk: true
    )
  end
end
